<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Admin Dashboard</title>

    <style>
      body { background-color: #000; color: #00ff00; } .dashboard-container {
      margin-top: 50px; } .card { background-color: #222; border: 1px solid
      #00ff00; margin-bottom: 20px; } .card-header { background-color: #111;
      border-bottom: 1px solid #00ff00; } .btn-hack { background-color: #00ff00;
      color: #000; } .btn-hack:hover { background-color: #006400; color: #fff; }
      .active-users { padding: 20px; background-color: #111; border: 1px solid
      #00ff00; color: #00ff00; }
      .completed-user {
  background-color: #33cc33; /* or any other highlight color */
  color: #000;
  /* Add any other styles for completed users */
}

    </style>
  </head>

  <body>

    <div class="container">
      <div class="row justify-content-center dashboard-container">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header text-center">
              <h4>Admin Dashboard</h4>
            </div>
            <div class="card-body">
              <button
                type="button"
                class="btn btn-hack btn-block"
                onclick="redirectToUserEnroll()"
              >Add User</button>

            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h5>Active Users</h5>
            </div>
            <div class="card-body">
              {{#each response}}
                <div
                  class="active-users d-flex justify-content-between align-items-center mb-3 {{#if this.completed}}completed-user{{/if}}"
                >
                  <h4>{{this.participantname}}</h4>
                  <div class="buttons-container">
                    <a href="/admin/view-user?id={{this._id}}" class="btn btn-primary btn-sm mr-2">view</a>
                    <a href="/admin/delete-user?id={{this._id}}" class="btn btn-danger btn-sm">Delete</a>
                  </div>
                </div>
              {{/each}}
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Add User Modal -->
    <div
      class="modal fade"
      id="addUserModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="addUserModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addUserModalLabel">Add User</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Add user form goes here -->
            <form id="addUserForm">
              <div class="form-group">
                <label for="userName">User Name:</label>
                <input
                  type="text"
                  class="form-control"
                  id="userName"
                  required
                />
              </div>
              <button type="submit" class="btn btn-hack btn-block">Add User</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
    <script>
      function redirectToUserEnroll() { window.location.href =
      '/admin/user-enroll'; }
    </script>

  </body>

</html>